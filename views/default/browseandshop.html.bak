{{extend 'layout.html'}}
{{block header}}
<div class="row" style="margin-left:20px;margin-top:20px" id="div123">
<div class="row">
        <ul class="nav nav-pills">
          <li role="presentation" class="dropdown">
            <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
              Glass Type
            </a>
            <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
                {{for i in category_list:}}
                {{str11='browseandshop/'+"category_type="+str(i['name'])}}
                <li><a href="{{=URL('default',str11)}}">{{=i['name']}}</a></li>
                <!--<li style="margin-left:20px"></li>-->
                {{pass}}
            </ul>
          </li>
          <li role="presentation" class="dropdown">
            <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
              Glass Style
            </a>
            <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
                {{for i in style_list:}}
                {{str11='browseandshop/'+"style_type="+str(i['name'])}}
                <li><a href="{{=URL('default',str11)}}">{{=i['name']}}</a></li>
               {{pass}}
            </ul>
          </li>
          <li role="presentation" class="dropdown">
            <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
              Glass Shape
            </a>
            <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
                {{for i in shape_list:}}
                {{str11='browseandshop/'+"shape_type="+str(i['name'])}}
                <li><a href="{{=URL('default',str11)}}">{{=i['name']}}</a></li>
                {{pass}}
            </ul>
          </li>
            <li role="presentation" class="dropdown">
            <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
              Glass Size
            </a>
            <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
                {{for i in size_list:}}
                {{str11='browseandshop/'+"size_type="+str(i['name'])}}
                <li><a href="{{=URL('default',str11)}}">{{=i['name']}}</a></li>
                {{pass}}
            </ul>
          </li>
          <li role="presentation" class="dropdown">
            <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
              Price Group
            </a>
            <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
                {{for i in price_group_list:}}
                {{str11='browseandshop/'+"price_group_type="+str(i['name'])}}
                <li><a href="{{=URL('default',str11)}}">{{=i['name']}}</a></li>
                {{pass}}
            </ul>
          </li>
         <!--<button type="button" class="btn btn-primary" aria-label="Left Align" style="margin-left:20px">
             <span class="glyphicon glyphicon glyphicon-filter" aria-hidden="true"></span>
             Filter
        </button>-->
  </div>
  <hr/>
  <div class="row">
   {{for i in product_list:}}
   <div class="col-md-3">
     <div class="thumbnail">
       <img width="150px" src="{{=URL('download', args=i['p_image'])}}" />
       <div class="caption">
        <h4>{{=i['p_name']}}</h4>
        <h5>Price : {{=i['p_price']}} </h5>
        <div class="row">
          <div class="col-md-6">
              <div class="checkbox">
                <label>
                  {{cartItemIDStr="cartItem_"+str(i['id'])}}
                  {{str1="maintain_cart/"+str(i['id'])}}
                  <input type="checkbox" id="{{=cartItemIDStr}}" onclick="ajax('{{=URL('default',str1)}}', [], '');"
                         {{if str(i['id']) in session.cart:}}checked{{pass}} /> Add to Cart
                   </label>
              </div>
         </div>
         <div class="col-md-6">
              <div class="checkbox">
                <label>
                  {{wlItemIDStr="cartItem_"+str(i['id'])}}
                  {{str1="maintain_wishlist/"+str(i['id'])}}
                  <input type="checkbox" id="{{=wlItemIDStr}}" onclick="ajax('{{=URL('default',str1)}}', [], '');"
                          {{if str(i['id']) in wishlist.cart:}}checked{{pass}}/> Add to WishList
                </label>
              </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  {{pass}}
</div>
</div>
{{end}}
